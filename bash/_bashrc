# Set locale in case
if [[ -z $LANG ]]; then
    echo "Warning: \$LANG is not set in profile."
    export LANG="en_US.UTF-8"
    export LC_ALL="en_US.UTF-8"
fi

# History
HISTSIZE=20000

# Editor
export EDITOR="vim"

# Environment
# set root Application as default target
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# PATH
# add script dir
export PATH="$PATH:$HOME/script"

# Homebrew
if which brew 2>&1 1>/dev/null; then
    export PATH="/usr/local/bin:$PATH"
fi

# Perlbrew
if [[ -s "$HOME/perl5/perlbrew/etc/bashrc" ]]; then
    source "$HOME/perl5/perlbrew/etc/bashrc"
fi

# plenv
if [[ -e "$HOME/.plenv" ]]; then
    export PATH="$HOME/.plenv/bin:$PATH"
    eval "$(plenv init - zsh)"
fi

# pyenv
if [[ -e "$HOME/.pyenv" ]]; then
    export PYENV_ROOT="$HOME/.pyenv"
    export PATH="$PYENV_ROOT/bin:$PATH"
    eval "$(pyenv init -)"
fi

# NVM
[ -s $HOME/.nvm/nvm.sh ] && . $HOME/.nvm/nvm.sh # This loads NVM

# rbenv
if which rbenv >/dev/null; then
    eval "$(rbenv init - bash)"
fi

# GVM
[ -s $HOME/.gvm/scripts/gvm ] && . $HOME/.gvm/scripts/gvm

# CloudSearch
export JAVA_HOME="$(/usr/libexec/java_home)"
export CS_HOME=/Users/dyng/Downloads/cloud-search-tools-v2-2.0.0.1-2014.03.14
