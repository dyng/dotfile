# Set locale in case
if [[ -z $LANG ]]; then
    echo "Warning: \$LANG is not set in profile."
    export LANG="en_US.UTF-8"
    export LC_ALL="en_US.UTF-8"
fi

# History
HISTSIZE=20000
SAVEHIST=20000

# Editor
export EDITOR="vim"

# Add script dir
export PATH="$PATH:$HOME/scripts"

# Alias
alias ll="ls -lAh"
alias la="ls -aTlFh"
alias lr="ls -Rlh"
alias lR="ls -RAlh"
alias diff="diff -u"
alias stat="stat -x"

# Git Alias
alias gd="git diff"
alias gds="git diff --staged"

# Less Alias
alias less="less -i" # case-insensitive

# Tig Alias
alias tia="tig --all"
alias tis="tig status"

# VSCode
function code () { VSCODE_CWD="$PWD" open -n -b "com.microsoft.VSCode" --args $*; }

# Homebrew
if hash brew &>/dev/null; then
    # add brew bin path
    export PATH="/usr/local/bin:$PATH"

    # set root Application as default target
    export HOMEBREW_CASK_OPTS="--appdir=/Applications"
fi

# language version managers
if [[ -e $HOME/.virtualenv_profile ]]; then
    source $HOME/.virtualenv_profile
fi

# fzf
[ -f ~/.fzf.bash ] && source ~/.fzf.bash

# Docker (for mac only)
if hash docker-machine &>/dev/null; then
    if [[ $(docker-machine status default 2>/dev/null) == "Running" ]]; then
        eval "$(docker-machine env default)"
    fi
fi

# Extra Config
for rc in $HOME/.shrc_d/*
do
    if [[ -f $rc ]]; then
        . $rc
    fi
done
